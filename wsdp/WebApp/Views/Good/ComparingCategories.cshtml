@model Model.DTO.ComparingCategoriesDTO
@{
    ViewBag.Title = "ComparingCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        position: relative;
    }

    .mtb {
        margin: 10px;
        background-color: #fdfdfd;
        border: 1px solid #D8D8D8;
        border-radius: 5px;
        border-width: 1px 1px 3px 1px;
        padding: 10px;
        height: 370px;
    }

    footer {
        position: absolute;
        width: 100%;
        bottom: -120px;
        z-index: 1000;
        margin-bottom: 20px;
    }

    footer a {
        color: #3498db;
        text-decoration: none;
    }

    footer a:hover,
    footer a:focus,
    footer a:active,
    footer a:visited {
        color: #02578e;
    }

    .navbar-default {
        background: #02578e !important;
    }

    .vcenter {
        height: 350px;
        display: flex;
        flex-direction: column;
    }

    .vcenter .item-name {
        margin-top: auto;
        margin-bottom: 10px;
 
    }

    .item-name a {
        color: #02578e;
    }
</style>
<div class="container">


@{
    var a = Model.CategoriesGoods.Keys;
}

    @foreach (var category in Model.CategoriesGoods.Keys)
    {
        var count = 0;
        
        <div class="row">
            <h3 class="text-info">@category.Name</h3>

            @foreach (var good in Model.CategoriesGoods[category])
            {
                count++;
                <div class="col-xs-3 mtb">
                    <div class="col-xs-12">
                        <div class="vcenter">
                            <div class="" style="margin:0 auto;">
                                <p>
                                    <img src="@good.ImgLink" alt="" class="img-responsive" />
                                </p>
                            </div>
                            <div class="item-name">
                                <br />
                                <h4>
                                    <a href="@Url.Action("ConcreteGood", "Good", new { id = good.Id })">@good.Name</a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    
         <div class="row">
             @if (count > 1)
             {
                <br />
                <a href="@Url.Action("CompareGoods","Good",new {id = category.Id})" class="btn btn-info">@Resources.Resource.CompareGoods</a>
             }
         </div>


    }

</div>
