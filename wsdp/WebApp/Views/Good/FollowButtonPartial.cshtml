@model Model.DTO.GoodViewModelDTO

@if (Model.Good.IsFollowed)
{

	<a class="btn btn-danger" data-good_id="@Model.Good.Id" data-user_id="@Model.UserId" onclick="Unfollow()" id="btn_follow"><span class="glyphicon glyphicon-refresh hidden glyphicon-refresh-animate"></span><span id="txt_butt">@Model.GetFollowText()</span></a>
}
else if (User.Identity.IsAuthenticated)
{
	<a class="btn btn-info" data-good_id="@Model.Good.Id" data-user_id="@Model.UserId" onclick="Follow()" id="btn_follow"><span class="glyphicon glyphicon-refresh hidden glyphicon-refresh-animate"></span><span id="txt_butt">@Model.GetFollowText()</span></a>
}
else
{
	<a class="btn btn-info" onclick="Register_follow()" id="btn_follow">@Model.GetFollowText()</a>
}

@if (Model.IsComparing)
{
    <a class="btn btn-info" onclick="UnsetCompareGood(@Model.Good.Id, this);"><span class="glyphicon glyphicon-ok mr-1"></span>@Resources.Resource.InComparing</a>
}
else
{
    <a class="btn btn-info" onclick="SetCompareGood(@Model.Good.Id, this);"><span class="glyphicon glyphicon-stats mr-1"></span>@Resources.Resource.Compare</a>
}


